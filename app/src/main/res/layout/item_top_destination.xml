<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_top_destination"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:src="@drawable/photo"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/tv_top_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/iv_top_destination"
        app:layout_constraintStart_toStartOf="@+id/iv_top_destination"
        app:layout_constraintTop_toBottomOf="@+id/iv_top_destination" />

</androidx.constraintlayout.widget.ConstraintLayout>